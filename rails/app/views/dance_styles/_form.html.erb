<%= form_for(@dance_style, html: { role: "form", class: "form-horizontal" }) do |f| %>
  <%= render "shared/errors", object: @dance_style %>

  <% if params[:action] == "show" %>
    <fieldset disabled>
  <% end %>

t <div class="form-group <%= 'has-error' if @dance_style.errors[:name].present? %>">
    <%= f.label t("activerecord.attributes.dance_style.name"), class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @dance_style.errors[:order_no].present? %>">
    <%= f.label t("activerecord.attributes.dance_style.order_no"), class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.number_field :order_no, class: "form-control" %>
    </div>
  </div>

  <% if params[:action] == "show" %>
    </fieldset>
  <% else %>
    <%= f.submit t("views.buttons.create"), class: "btn btn-default pull-right" %>
  <% end %>

<% end %>
