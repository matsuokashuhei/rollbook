<% breadcrumb :lesson, @lesson %>
<div class="row">
  <div class="col-md-12">
    <%= render "shared/notice" %>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <%= render "cancel_button", lesson: @lesson %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-9">
    <%= render "rolls" %>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <%= render partial: 'lessons/prev_and_next_lesson', locals: { lesson: @lesson.decorate } %>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <%= button_to_back lessons_path(date: @lesson.date.to_s(:number)), pull: "left" %>
    <% if current_user.manager? && @lesson.fixed? %>
      <%= render "shared/unfix_button", path: unfix_lesson_path(@lesson), object: @lesson %>
    <% else %>
      <%= render "shared/fix_button", path: fix_lesson_path(@lesson), object: @lesson %>
    <% end %>
    <%= button_to_edit edit_lesson_rolls_path(@lesson), pull: "right", edit: @lesson.editable? %>
  </div>
</div>
