<%# render "nav_tabs" %>
<%= render "breadcrumb" %>

<%= new_link_to new_bank_account_path, pull: "right" %>

<div class="tab-content">
  <br />
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.bank_account.id") %></th>
          <th><%= t("activerecord.attributes.bank_account.holder_name") %></th>
          <th><%= t("activerecord.attributes.bank_account.status") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @bank_accounts.each do |bank_account| %>
          <tr>
            <td><%= bank_account.id %></td>
            <td><%= display_name(bank_account) %></td>
            <td><%= status_name(bank_account.status) %></td>
            <td>
              <%= show_link_to bank_account_path(bank_account) %>
              <%= edit_link_to edit_bank_account_path(bank_account) %>
              <%# link_to t("views.buttons.show"), bank_account, class: "btn btn-default" %>
              <%# link_to t("views.buttons.edit"), edit_bank_account_path(bank_account), class: "btn btn-default" %>
              <%= render "shared/delete_button", object: bank_account %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @bank_accounts %>
  </div>
</div>

