<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <%= list_item_to_bank_accounts active: true %>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= button_to_new new_bank_account_path, pull: "right" %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th><%= t("activerecord.attributes.bank_account.id") %></th>
            <th><%= t("activerecord.attributes.bank_account.holder_name") %></th>
            <th><%= t("activerecord.attributes.bank_account.status") %></th>
            <th><%= t("activerecord.models.member") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @bank_accounts.each do |bank_account| %>
            <tr>
              <td><%= bank_account.id %></td>
              <td><%= bank_account.holder_name %></td>
              <td><%= bank_account.status %></td>
              <td><div class="pull-right"><%= bank_account.members.active.count %></div></td>
              <td>
                <%= link_to_show bank_account_path(bank_account) %>
                <%= link_to_edit edit_bank_account_path(bank_account) %>
                <%= link_to_destroy bank_account.id, bank_account_path(bank_account) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @bank_accounts %>
    </div>
  </div>
</div>
