<ul class="nav nav-tabs">
  <li>
    <%= link_to t("activerecord.models.bank_account"), bank_account_path(@bank_account), class: "btn btn-link" %>
  </li>
  <li class="active">
    <a href="#members" data-toggle="tab"><%= t("activerecord.models.member") %></a>
  </li>
  <%= link_to t("views.buttons.new"), new_bank_account_member_path(@bank_account), class: "btn btn-default pull-right" %>
</ul>

<div class="tab-content">
  <br />
  <%= render "shared/notice" %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.member.id") %></th>
          <th><%= t("activerecord.attributes.member.name") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td><%= display_member_name(member) %></td>
            <td><%= link_to t("views.buttons.destroy"), destroy_bank_account_member_path(@bank_account, member), method: :delete, class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

