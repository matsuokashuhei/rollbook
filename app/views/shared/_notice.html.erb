<% if flash[:notice].present? %>
  <div class="alert alert-info alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" alia-hidden="true">&times;</button>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" alia-hidden="true">&times;</button>
    <%= flash[:alert] %>
  </div>
<% end %>

<% if notice.present? %>
  <div class="alert alert-info alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" alia-hidden="true">&times;</button>
    <%= notice %>
  </div>
<% end %>

