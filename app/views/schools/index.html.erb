<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.school.name") %></th>
        <th><%= t("activerecord.attributes.school.zip") %></th>
        <th><%= t("activerecord.attributes.school.address") %></th>
        <th><%= t("activerecord.attributes.school.phone") %></th>
        <% if false %>
          <th><%= t("activerecord.attributes.school.open_date") %></th>
          <th><%= t("activerecord.attributes.school.close_date") %></th>
          <th><%= t("activerecord.attributes.school.note") %></th>
        <% end %>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td><%= school.zip %></td>
          <td><%= school.address %></td>
          <td><%= school.phone %></td>
          <% if false %>
            <td><%= school.open_date %></td>
            <td><%= school.close_date %></td>
            <td><%= school.note %></td>
          <% end %>
          <td><%= link_to t("views.buttons.show"), school, class: "btn btn-default" %></td>
          <td><%= link_to t("views.buttons.edit"), edit_school_path(school), class: "btn btn-default" %></td>
          <td><%= render "shared/delete_link", object: school %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />
<%= link_to t("views.buttons.new"), new_school_path, class: "btn btn-default" %>
