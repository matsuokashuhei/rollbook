<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!--<div class="panel-heading">Show school</div>-->
  <div class="panel-body">
    <div class="form-group">
      <%= label_tag :name %><br>
      <%= text_field_tag :name, @school.name, class: "form-control", disabled: "disabled" %>
    </div>
    <div class="form-group">
      <%= label_tag :zip %><br>
      <%= text_field_tag :zip, @school.zip, class: "form-control", disabled: "disabled" %>
    </div>
    <div class="form-group">
      <%= label_tag :address %><br>
      <%= text_field_tag :address, @school.address, class: "form-control", disabled: "disabled" %>
    </div>
    <div class="form-group">
      <%= label_tag :phone %><br>
      <%= text_field_tag :phone, @school.phone, class: "form-control", disabled: "disabled" %>
    </div>
    <div class="form-group">
      <%= label_tag :start_date %><br>
      <%= text_field_tag :start_date,  @school.start_date, class: "form-control", disabled: "disabled" %>
    </div>
    <div class="form-group">
      <%= label_tag :end_date %><br>
      <%= text_field_tag :end_date, @school.end_date, class: "form-control", disabled: "disabled" %>
    </div>
    <div class="form-group">
      <%= label_tag :note %><br>
      <%= text_area :note, @school.note, class: "form-control", disabled: "disabled" %>
    </div>

    <%= link_to t("views.buttons.back"), schools_path, class: "btn btn-default pull-left" %>
    <%= link_to t("views.buttons.edit"), edit_school_path(@school), class: "btn btn-default pull-right" %>
  </div>
</div>

