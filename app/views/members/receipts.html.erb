<%= render "breadcrumb" %>

<ul class="nav nav-tabs">
  <li><%= link_to t("activerecord.models.member"), member_path(@member) %></li>
  <li><%= member_courses_link(@member) %></li>
  <li><%= member_rolls_link(@member) %></li>
  <li><%= recesses_link(@member) %></li>
  <li class="active">
    <a href="#member" data-toggle="tab"><%= t("activerecord.models.receipt") %></a>
  </li>
</ul>

<div class="tab-content">
  <br />
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.tuition.month") %></th>
          <th><%= t("activerecord.attributes.receipt.amount") %></th>
          <th><%= t("activerecord.attributes.receipt.status") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @receipts.each do |receipt| %>
          <tr>
            <td><%= receipt.tuition.month %></td>
            <td><div class="pull-right"><%= number_to_currency(receipt.amount) %></div></td>
            <td><%= receipt.status %></td>
            <td><%= link_to_show tuition_receipt_path(receipt.tuition, receipt) %></td>
          </tr>
        <% end %>
    </table>
  </div>
</div>

