<ol class="breadcrumb">
  <% if current_page?(members_path) %>
    <li class="active"><%= t("activerecord.models.member") %></li>
  <% else %>
    <li><%= link_to t("activerecord.models.member"), members_path %></li>
  <% end %>
  <% if current_page?(new_member_path) %>
    <li class="active"><%= t("views.buttons.new") %></li>
  <% end %>
  <% if current_page?(member_path(@member)) %>
    <li class="active"><%= @member.full_name %></li>
  <% end %>
  <% if current_page?(edit_member_path(@member)) %>
    <li><%= link_to @member.full_name, member_path(@member) %></li>
    <li class="active"><%= t("views.buttons.edit") %></li>
  <% end %>
  <% if current_page?(member_rolls_path(@member)) %>
    <li class="active"><%= @member.full_name %></li>
    <% if false %>
    <li><%= link_to @member.full_name, member_path(@member) %></li>
    <li class="active"><%= t("activerecord.models.lesson") %></li>
    <% end %>
  <% end %>
  <% if current_page?(member_receipts_path(@member)) %>
    <li class="active"><%= @member.full_name %></li>
    <% if false %>
    <li><%= link_to @member.full_name, member_path(@member) %></li>
    <li class="active"><%= t("activerecord.models.lesson") %></li>
    <% end %>
  <% end %>
</ol>

