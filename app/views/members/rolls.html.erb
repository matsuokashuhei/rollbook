<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <%= list_item_to_members %>
      <%= list_item_to_member(@member, active: true) %>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <%= tab_to_member(@member) %>
      <%= tab_to_members_courses(@member) %>
      <%= tab_to_members_rolls(@member, active: true) %>
      <%= tab_to_members_recesses(@member) %>
      <%= tab_to_members_receipts(@member) %>
      <% if false %>
        <% unless @member.guest? %>
          <li><%= link_to t("activerecord.models.member"), member_path(@member) %></li>
          <li><%= member_courses_link(@member) %></li>
          <li class="active"><a href="#roll" data-toggle="tab"><%= t("activerecord.models.lesson") %></a></li>
          <li><%= recesses_link(@member) %></li>
          <li><%= member_receipts_link(@member) %></li>
        <% else %>
          <li><%= link_to t("activerecord.models.member"), member_path(@member) %></li>
          <li class="active"><a href="#roll" data-toggle="tab"><%= t("activerecord.models.lesson") %></a></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12">
    <%= form_tag member_rolls_path, method: :get, class: "form-inline" do %>
      <div class="form-group">
        <%= text_field_tag "month", params[:month], class: "form-control", placeholder: "月", data: { behaviour: "monthpicker" }  %>
      </div>
      <div class="form-group">
        <% members_courses = @member.members_courses.joins(:course) %>
        <%= select_tag :course_id, options_for_select(members_courses.map {|m| [m.course.name, m.course_id] }, params[:course_id]), class: "form-control", prompt: "" %>
      </div>
      <div class="form-group">
        <%= select_tag :status, options_for_select(options_of_status, params[:status]), class: "form-control", prompt: "" %>
      </div>
      <% if false %>
        <div class="form-group">
          <%= text_field_tag "first_name_kana", params[:first_name_kana], class: "form-control", placeholder: "名 (フリガナ)"  %>
        </div>
      <% end %>
      <%= button_to_search %>
    <% end %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th><%= t("activerecord.attributes.lesson.date") %></th>
            <th><%= t("activerecord.models.course") %></th>
            <th><%= t("activerecord.attributes.roll.status") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @rolls.each do |roll| %>
            <% lesson = roll.lesson %>
            <% course = lesson.course %>
            <tr>
              <td><%= lesson.date %></td>
              <td><%= course.name %></td>
              <td><%= roll.status %></td>
              <td><%= link_to_show lesson_rolls_path(lesson) %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>


