<%= render "breadcrumb" %>
<div class="row">
  <div class="col-md-12">
    <%= button_to_new new_instructor_path, pull: "right" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th colspan="2"><%= t("activerecord.attributes.instructor.name") %></th>
            <th>クラス数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @instructors.each do |instructor| %>
            <tr>
              <td><%= instructor.name %></td>
              <td><%= instructor.team %></td>
              <td><div class="pull-right"><%= instructor.courses.active.count %></div></td>
              <td>
                <%= link_to_show instructor_path(instructor) %>
                <%= link_to_edit edit_instructor_path(instructor) %>
                <%= link_to_destroy instructor.id, instructor_path(instructor), destroy: instructor.destroy? %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @instructors %>
    </div>
  </div>
</div>
