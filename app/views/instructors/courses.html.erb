<%= render "breadcrumb" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to t("activerecord.models.instructor"), instructor_path(@instructor), class: "btn btn-link" %>
  </li>
  <li class="active">
    <a href="#course" data-toggle="tab"><%= t("activerecord.models.course") %></a>
  </li>
</ul>
<div class="tab-content">
  <br />
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.models.school") %></th>
          <th><%= t("activerecord.models.studio") %></th>
          <th><%= t("activerecord.attributes.timetable.weekday") %></th>
          <th><%= t("activerecord.models.time_slot") %></th>
          <th><%= t("activerecord.models.course") %></th>
          <th><%= t("activerecord.attributes.course.open_date") %></th>
          <th><%= t("activerecord.attributes.course.close_date") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.timetable.studio.school.name %></td>
            <td><%= course.timetable.studio.name %></td>
            <td><%= weekday_ja(course.timetable.weekday) %></td>
            <td><%= course.timetable.time_slot.start_time %></td>
            <td><%= "#{course.dance_style.name}#{course.level.name}" %></td>
            <td><%= course.open_date %></td>
            <td><%= course.close_date %></td>
            <td><%= link_to t("views.buttons.show"), course_path(course), class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
