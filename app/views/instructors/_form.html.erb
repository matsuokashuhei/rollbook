<%= form_for(@instructor, html: { role: "form", class: "form-horizontal" }) do |f| %>
  <%= render "shared/errors", object: @instructor %>
  <div class="form-group <%= 'has-error' if @instructor.errors[:name].present? %>">
    <%= f.label :name, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :kana, class: "form-control", "placeholder" => "ふりがな" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @instructor.errors[:kana].present? %>">
    <div class="col-md-5 col-md-offset-2">
      <%= f.text_field :name, class: "form-control", "placeholder" => "名前" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @instructor.errors[:team].present? %>">
    <%= f.label :team, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :team, class: "form-control" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @instructor.errors[:phone].present? %>">
    <%= f.label :phone, class: "col-md-2 control-label" %>
    <div class="col-md-2">
      <%= f.phone_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @instructor.errors[:email_pc].present? %>">
    <label class="col-md-2 control-label"><%= t("activerecord.attributes.instructor.email") %></label>
    <div class="col-md-5">
      <%= f.email_field :email_pc, class: "form-control", "placeholder" => "PC" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @instructor.errors[:email_mobile].present? %>">
    <div class="col-md-5 col-md-offset-2">
      <%= f.email_field :email_mobile, class: "form-control", "placeholder" => "モバイル" %>
    </div>
  </div>
  <div class="form-group <%= 'has-error' if @instructor.errors[:note].present? %>">
    <%= f.label :note, class: "col-md-2 control-label" %>
    <div class="col-md-5">
      <%= f.text_area :note, class: "form-control" %>
    </div>
  </div>
  <%= f.submit t("views.buttons.create"), class: "btn btn-default pull-right" %>
<% end %>
