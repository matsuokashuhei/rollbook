<%= form_for(@instructor, { roll: "form" }) do |f| %>
  <%= render "shared/errors", object: @instructor %>
  <div class="form-group <%= 'has_error' if @instructor.errors[:name].present? %>">
    <%= f.label :name, class: "control-label" %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group <%= 'has_error' if @instructor.errors[:kana].present? %>">
    <%= f.label :kana, class: "control-label" %><br />
    <%= f.text_field :kana, class: "form-control" %>
  </div>
  <div class="form-group <%= 'has_error' if @instructor.errors[:team].present? %>">
    <%= f.label :team, class: "control-label" %><br />
    <%= f.text_field :team, class: "form-control" %>
  </div>
  <div class="form-group <%= 'has_error' if @instructor.errors[:phone].present? %>">
    <%= f.label :phone, class: "control-label" %><br />
    <%= f.phone_field :phone, class: "form-control" %>
  </div>
  <div class="form-group <%= 'has_error' if @instructor.errors[:email_pc].present? %>">
    <%= f.label :email_pc, class: "control-label" %><br />
    <%= f.email_field :email_pc, class: "form-control" %>
  </div>
  <div class="form-group <%= 'has_error' if @instructor.errors[:email_mobile].present? %>">
    <%= f.label :email_mobile, class: "control-label" %><br />
    <%= f.email_field :email_mobile, class: "form-control" %>
  </div>
  <div class="form-group <%= 'has_error' if @instructor.errors[:note].present? %>">
    <%= f.label :note, class: "control-label" %><br />
    <%= f.text_area :note, class: "form-control" %>
  </div>
  <%= f.submit t("views.buttons.create"), class: "btn btn-default pull-right" %>
<% end %>
