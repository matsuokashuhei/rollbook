<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <%= list_item_to_lessons %>
      <%= list_item_to_lessons_of_month @lesson.date.strftime("%Y%m") %>
      <%= list_item_to_lessons_of_day @lesson.date %>
      <%= list_item_to_lesson @lesson, active: true %>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= form_tag(cancel_lesson_path(@lesson), method: "post", id: "cancel_form") do %>
      <div class="btn-group pull-right">
        <button type="button" class="btn btn-default">休　　講</button>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <input type="hidden" name="status" id="status" />
        <ul class="dropdown-menu" role="menu">
          <li><a href="javascript:void(0)" onclick="$('#status').val('2'); $('#cancel_form').submit(); return false;">先生の欠席</a></li>
          <li><a href="javascript:void(0)" onclick="$('#status').val('3'); $('#cancel_form').submit(); return false;">自然災害等</a></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render "shared/notice" %>
    <%= render "form" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <ul class="pager">
      <li class="previous">
        <%= link_to_prev_lesson @lesson.prev_lesson %>
      </li>
      <li class="next">
        <%= link_to_next_lesson @lesson.next_lesson %>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= button_to_back lessons_path(date: @lesson.date.strftime("%Y%m%d")), pull: "left" %>
  </div>
  <div class="col-md-2">
    <%= button_to_edit edit_lesson_rolls_path(@lesson), pull: "right", edit: @lesson.edit? %>
  </div>
  <div class="col-md-2">
    <%= button_to_fix @lesson %>
    <% if @lesson.fix? %>
      <%= render "shared/modal_to_fix", id: "lesson", path: fix_lesson_path(@lesson) %>
    <% end %>
  </div>
</div>
