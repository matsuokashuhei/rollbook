<% breadcrumb :edit_lesson, @lesson %>
<div class="row">
  <div class="col-md-6">
    <%= button_to_absences absentees_path(@lesson), pull: "right" %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-6">
    <%= render "form" %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <ul class="pager">
      <li class="previous">
        <%= link_to_prev_lesson @lesson.prev_lesson %>
      </li>
      <li class="next">
        <%= link_to_next_lesson @lesson.next_lesson %>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= button_to_back lesson_rolls_path(@lesson), pull: "left" %>
    <%= button_to_save pull: "right" %>
  </div>
</div>
