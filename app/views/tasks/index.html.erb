<%= render "nav_tabs" %>

<div class="tab-content">
  <br />
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.task.name") %></th>
          <th><%= t("activerecord.attributes.task.frequency") %></th>
          <th><%= t("activerecord.attributes.task.due_date") %></th>
          <th><%= t("activerecord.attributes.task.status") %></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name_ja %></td>
            <td><%= task.frequency_ja %></td>
            <td><%= task.due_date %></td>
            <td><%= task.status_label %></td>
            <td><%= link_to t("views.buttons.show"), task_path(task), class: "btn btn-default" %></td>
            <td><%= link_to t("views.buttons.edit"), edit_task_path(task), class: "btn btn-default" %></td>
            <td><%= render "shared/delete_button", object: task.model %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
