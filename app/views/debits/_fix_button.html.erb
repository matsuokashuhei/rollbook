<a data-toggle="modal" href="#fix" class="btn btn-default pull-right">
  <%= t("views.buttons.fix") %>
</a>
<div class="modal fade" id="fix">
  <%= form_for @tuition do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">月謝の引落</h4>
        </div>
        <div class="modal-body">
          <%= Date.today.strftime("%Y年%m月") %>の残高不足のリストアップを確定します。よいですか？
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><%= t("views.buttons.close") %></button>
          <%= hidden_field_tag "tuition[id]", @tuition.id %>
          <%= hidden_field_tag "tuition[month]", @tuition.month %>
          <%= hidden_field_tag "tuition[debit_status]", Tuition::DEBIT_STATUSES[:FINISHED] %>
          <%= hidden_field_tag "tuition[receipt_status]", Tuition::RECEIPT_STATUSES[:IN_PROCESS] %>
          <%= f.submit t("views.buttons.fix"), class: "btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
