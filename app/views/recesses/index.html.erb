<%= render "breadcrumb" %>
<%= render "nav_tabs" %>
<br />
<%= button_to_new new_member_recess_path(@member), pull: "right" %>
<div class="tab-content">
  <%= render "shared/notice" %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.recess.month") %></th>
          <th><%= t("activerecord.attributes.recess.members_course_id") %></th>
          <th><%= t("activerecord.attributes.recess.status") %></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @recesses.each do |recess| %>
          <tr>
            <td><%= recess.month %></td>
            <td><%= recess.members_course.course.name %></td>
            <td><%= recess.status %></td>
            <td>
              <%= link_to_show member_recess_path(@member, recess) %>
              <%= link_to_edit edit_member_recess_path(@member, recess) %>
              <%= link_to_destroy recess.id, member_recess_path(@member, recess), destroy: recess.delete? %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
