<ul class="nav nav-tabs">
  <li>
    <%= link_to t("activerecord.models.member"), member_path(@member), class: "btn btn-link" %>
  </li>
  <li class="active">
    <a href="#members_courses" data-toggle="tab"><%= t("activerecord.models.members_course") %></a>
  </li>
  <% if current_page?(member_courses_path(@member)) || current_page?(member_course_path(@member, @members_course)) %>
    <li><%= member_rolls_link(@member) %></li>
    <li><%= recesses_link(@member) %></li>
    <li><%= member_receipts_link(@member) %></li>
  <% end %>
  <% if current_page?(edit_member_course_path(@member, @members_course)) %>
    <li class="disabled"><%= member_rolls_link(@member, disabled: true) %></li>
    <li class="disabled"><%= recesses_link(@member, disabled: true) %></li>
    <li class="disabled"><%= member_receipts_link(@member, disabled: true) %></li>
  <% end %>
  <% if current_page?(member_courses_path(@member)) %>
    <%= new_link_to new_member_course_path(@member), pull: "right" %>
  <% end %>
</ul>


