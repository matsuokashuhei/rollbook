<% breadcrumb :member, @member %>
<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <%= tab_to_member(@member) %>
      <%= tab_to_members_courses(@member, active: true) %>
      <%= tab_to_members_rolls(@member) %>
      <%= tab_to_members_recesses(@member) %>
    </ul>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12">
    <%= render "shared/notice" %>
    <%= render "form" %>
    <%= button_to_back member_members_courses_path(@member), pull: "left" %>
    <%= button_to_edit edit_member_members_course_path(@member, @members_course), pull: "right" %>
  </div>
</div>
