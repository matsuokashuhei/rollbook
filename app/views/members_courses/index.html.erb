<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.members_course.member_id") %></th>
        <th><%= t("activerecord.attributes.members_course.course_id") %></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th><%= t("activerecord.attributes.members_course.begin_date") %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @members_courses.each do |members_course| %>
        <% course = @courses.find(members_course.course_id) %>
        <tr>
          <td><%= members_course.member.full_name %></td>
          <td><%= course.timetable.studio.school.name %></td>
          <td><%= course.timetable.studio.name %></td>
          <td><%= weekday_ja(course.timetable.weekday) %></td>
          <td><%= course.timetable.time_slot.start_time %></td>
          <td><%= course.name %></td>
          <td><%= members_course.begin_date %></td>
          <td><%= link_to t("views.buttons.show"), member_members_course_path(@member, members_course), class: "btn btn-default" %></td>
          <td><%= link_to t("views.buttons.edit"), edit_member_members_course_path(@member, members_course), class: "btn btn-default" %></td>
          <td>
            <a data-toggle="modal" href="#object_<%= members_course.id %>" class="btn btn-default"><%= t("views.buttons.destroy") %></a>
            <div class="modal fade" id="object_<%= members_course.id %>">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">確認</h4>
                  </div>
                  <div class="modal-body">
                    削除してよいですか？
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">閉 じ る</button>
                    <%= link_to t("views.buttons.destroy"), [@member, members_course], method: :delete, class: "btn btn-default" %>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />
<%= link_to t("views.buttons.new"), new_member_members_course_path(@member), class: "btn btn-default" %>
