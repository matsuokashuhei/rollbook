<%= render "breadcrumb" %>
<%= render "nav_tabs" %>
<br />
<%= button_to_new new_member_course_path(@member), pull: "right" %>
<div class="tab-content">
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th><%= t("activerecord.models.school") %></th>
          <th><%= t("activerecord.models.studio") %></th>
          <th><%= t("activerecord.attributes.timetable.weekday") %></th>
          <th><%= t("activerecord.models.time_slot") %></th>
          <th><%= t("activerecord.models.course") %></th>
          <th><%= t("activerecord.attributes.members_course.begin_date") %></th>
          <th><%= t("activerecord.attributes.members_course.end_date") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @members_courses.each do |members_course| %>
          <% course = members_course.course %>
          <% timetable = course.timetable %>
          <% time_slot = timetable.time_slot %>
          <% studio = timetable.studio %>
          <% school = studio.school %>
          <tr>
            <td><%= school.name %></td>
            <td><%= studio.name %></td>
            <td><%= timetable.weekday_ja %></td>
            <td><%= time_slot.start_time %></td>
            <td><%= course.name %></td>
            <td><%= members_course.begin_date %></td>
            <td><%= members_course.end_date %></td>
            <td>
              <%= link_to_show member_course_path(@member, members_course) %>
              <%= link_to_edit edit_member_course_path(@member, members_course) %>
              <%= link_to_destroy members_course.id, member_course_path(@member, members_course), destroy: members_course.destroy? %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
