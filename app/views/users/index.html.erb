<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <%= list_item_to_users active: true %>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= button_to_new new_user_path, pull: "right" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th><%= t("activerecord.attributes.user.name") %></th>
            <th><%= t("activerecord.attributes.user.school_id") %></th>
            <th><%= t("activerecord.attributes.user.email") %></th>
            <th><%= t("activerecord.attributes.user.role") %></th>
            <th><%= t("activerecord.attributes.user.status") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.school.name if user.school_id %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td><%= user.status %></td>
              <td>
                <%= link_to_show user_path(user) %>
                <% if current_user.role.to_i <= user.model.role.to_i %>
                  <%= link_to_edit edit_user_path(user) %>
                  <%= link_to_destroy user.id, user_path(user) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
