<%= render "nav_tabs" %>

<div class="tab-content">
  <br />
  <%# render "breadcrumb" %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t("activerecord.attributes.receipt.member_id") %></th>
          <th><%= t("activerecord.attributes.receipt.amount") %></th>
          <th><%= t("activerecord.attributes.receipt.method") %></th>
          <th><%= t("activerecord.attributes.receipt.status") %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @receipts.each do |receipt| %>
          <tr>
            <td><%= receipt.member.name %></td>
            <td><%= receipt.amount %></td>
            <td><%= receipt.method %></td>
            <td><%= receipt.status %></td>
            <td><%= link_to t("views.buttons.show"), tuition_receipt_path(@tuition, receipt), class: "btn btn-default" %></td>
            <td><%= link_to t("views.buttons.edit"), edit_tuition_receipt_path(@tuition, receipt), class: "btn btn-default" %></td>
            <td><%# link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @receipts %>
</div>
