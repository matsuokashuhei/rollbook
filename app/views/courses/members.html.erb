<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <%= list_item_to_schools %>
      <%= list_item_to_courses(@studio) %>
      <%= list_item_to_course(@course, active: true) %>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <%= tab_to_course @course %>
      <%= tab_to_courses_members @course, active: true %>
      <%= tab_to_courses_lessons @course %>
    </ul>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th><%= t("activerecord.attributes.member.number") %></th>
            <th><%= t("activerecord.attributes.member.name") %></th>
            <th></th>
            <th><%= t("activerecord.attributes.members_course.begin_date") %></th>
            <th><%= t("activerecord.attributes.members_course.end_date") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @members_courses.each do |members_course| %>
            <tr>
              <td><%= members_course.member.number %></td>
              <td><%= members_course.member.decorate.name %></td>
              <td><%= members_course.member.decorate.tuition %></td>
              <td><%= members_course.begin_date %></td>
              <td><%= members_course.end_date %></td>
              <td><%= link_to_show member_course_path(members_course.member, members_course) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
