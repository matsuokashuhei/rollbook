<div class="row">
  <div class="col-md-4">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th><%= t "activerecord.models.member" %></th>
        </tr>
      </thead>
      <tbody>
        <% @members.each.with_index(1) do |member, i| %>
          <tr>
            <td><div class="pull-right"><%= i %></div></td>
            <td><%= link_to member.name, member_path(member) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
